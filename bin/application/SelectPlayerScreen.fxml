                     <left>
                        <Button mnemonicParsing="false" text="&lt;" BorderPane.alignment="CENTER" />
                     </left>
                     <right>
                        <Button mnemonicParsing="false" text="&gt;" BorderPane.alignment="CENTER" />
                     </right>
